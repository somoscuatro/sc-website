{% extends "section.twig" %}

{% block section_content %}
	<div class="flex flex-col divide-y divide-anti-flash-white-400">
		{% for group in groups %}
			<div class="flex flex-col gap-12 py-12 md:py-20 md:gap-32 last:pb-0 first:pt-0 md:flex-row">
				<div class="flex flex-col gap-6 md:w-1/3">
					{% include 'image.twig' with {
						class: 'w-[160px] h-[160px]',
						image: function('acf_get_attachment', group.image.ID),
						width: 160,
						height: 160,
						allowed_sizes: ['sm', 'md', 'lg']
					} %}
					<div class="flex flex-col gap-4">
						<h2 class="text-4xl">{{ group.group_title }}</h2>
						<p>{{ group.group_text }}</p>
					</div>
				</div>
				<div class="flex flex-col gap-12 md:w-2/3">
					{% for value in group.group_values %}
						<div class="flex flex-col gap-2">
							<h3 class="text-2xl font-semibold font-syne">{{ value.value_title }}</h3>
							<p>{{ value.value_text }}</p>
						</div>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
