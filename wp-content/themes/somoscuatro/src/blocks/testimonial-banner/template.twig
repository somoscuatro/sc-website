{% extends "section.twig" %}

{% set background = get_color_name(bg_color) %}
{% set foreground = get_foreground_color_name(background) %}

{% block section_content %}
	<div class="flex flex-col text-{{ foreground }}">
		{% for testimonial in testimonials %}
			<div class="flex gap-10 md:gap-16">
				<img class="rounded-full h-fit" src="{{ function('get_field', 'cpt_testimonials_image', testimonial.ID).url }}" width="180" height="180">
				<div class="flex flex-col gap-4">
					<p class="text-2xl">{{ testimonial.post_content|striptags }}</p>
					<div class="flex flex-col">
						<h3 class="text-lg font-bold">{{ testimonial.post_title }}</h3>
						<p>{{ function('get_field', 'cpt_testimonials_role_company', testimonial.ID) }}</p>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
