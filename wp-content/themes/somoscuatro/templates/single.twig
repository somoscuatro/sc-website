{% extends 'base.twig' %}

{% block content %}
	<main id="content">
		<div class="flex flex-col max-w-5xl mx-auto">
			{% include 'image/template.twig' with {
				class: "object-cover w-full max-h-72",
				image: function('acf_get_attachment', function('get_post_thumbnail_id', post.ID)),
				allowed_sizes: ['md', 'lg', 'xl']
			} %}
			<div class="flex flex-col max-w-3xl gap-4 pb-6 mx-auto mt-0 md:-mt-20 bg-anti-flash-white-100 p-11">
				{{ get_breadcrumbs() }}
				<h1 class="text-4xl font-semibold font-syne">{{ post.title }}</h1>
			</div>
		</div>
		{% if post.content is not empty %}
			{{ post.content }}
		{% endif %}
	</main>
{% endblock %}
