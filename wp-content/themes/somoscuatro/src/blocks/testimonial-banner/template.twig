{% extends "section.twig" %}

{% set background = get_color_name(bg_color) %}
{% set foreground = get_foreground_color_name(background) %}

{% block section_content %}
	<div class="flex flex-col gap-16 text-{{ foreground }}">
		{% for testimonial in testimonials %}
			<div class="flex">
				<div class="w-1/4">
					<img class="rounded-full" src="{{ function('get_field', 'cpt_testimonials_image', testimonial.ID).url }}" width="240" height="240">
				</div>
				<div class="flex flex-col w-3/4 gap-4">
					<p class="text-3xl">{{ testimonial.post_content|striptags }}</p>
					<div class="flex flex-col">
						<h3 class="font-bold">{{ testimonial.post_title }}</h3>
						<p>{{ function('get_field', 'cpt_testimonials_role_company', testimonial.ID) }}</p>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
