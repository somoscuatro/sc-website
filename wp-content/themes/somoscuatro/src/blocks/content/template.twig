{% extends "section.twig" %}

{% set background = get_color_name(bg_color) %}
{% set foreground = get_foreground_color_name(background) %}

{% block section_content %}
	<div class="flex flex-col gap-16 text-{{ foreground }}">
		{% if title %}
			<h2 class="text-6xl font-medium font-syne">{{ title }}</h2>
		{% endif %}
		<div class="grid grid-cols-3 gap-20">
			{% for column in columns %}
				<div class="flex flex-col gap-2">
					<h3 class="text-3xl font-medium font-syne">{{ column.title }}</h3>
					<p class="h-full">{{ column.text }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
