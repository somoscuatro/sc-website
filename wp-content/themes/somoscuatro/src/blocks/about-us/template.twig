{% extends "section.twig" %}

{% set background = get_color_name(bg_color) %}
{% set foreground = get_foreground_color_name(background) %}

{% block section_content %}
	<div class="flex flex-col gap-10 md:gap-20 text-{{ foreground }}">
	 	{% if text %}
			<h2 class="max-w-3xl mx-auto text-2xl md:text-center md:text-4xl font-syne">{{ text }}</h2>
		{% endif %}
		<div class="flex flex-col justify-center gap-2">
			<p class="text-lg font-bold text-center uppercase">{{ __('Trusted By', 'somoscuatro-theme') }}</p>
			<div class="flex flex-wrap justify-center lg:justify-between">
				{% for item in customers_logos %}
					{% include 'image/template.twig' with {
						class: "max-w-[140px] md:max-w-[176px]",
						image: item.customer_logo,
						allowed_sizes: ['sm']
					} %}
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
