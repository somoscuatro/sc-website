{% extends "section.twig" %}

{% set background = get_color_name(bg_color) %}
{% set foreground = get_foreground_color_name(background) %}

{% set section_classes = 'relative z-10 overflow-hidden' %}

{% block section_content %}
	<div class="flex flex-col gap-6 text-{{ foreground }}">
		<img class="absolute bottom-0 hidden xl:block -z-10 right-10 2xl:left-1/2 stroke-anti-flash-white-100" src="{{ get_static_image('cta/image.svg') }}" width="600" height="482" alt="An astronaut with a WordPress flag in the hand">
		<h2 class="text-4xl md:text-6xl font-syne">{{ text }}</h2>
		<div class="flex gap-4">
			{% for item in buttons %}
				{% include 'button.twig' with {
					title: item.button.title,
					url: item.button.url,
					target: item.button.target,
					type: loop.index == 1 ? 'primary' : 'hollow_light',
					attrs: item.button.url == '#calendly' ? 'onclick="Calendly.initPopupWidget({url: \'https://calendly.com/luca-pipolo/let-s-meet?hide_gdpr_banner=1\'});return false;"' : ''
				} %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
