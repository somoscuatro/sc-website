<div class="container container-padding container-gap">
	<h2 class="text-center">{{ heading }}</h2>
	<div class="grid grid-cols-3 gap-16">
		{% for card in cards %}
			<div class="flex items-start gap-6">
				<img src="{{ card.image.url }}" width="60" height="60">
				<div class="flex flex-col gap-2">
					<h3 class="body-bold">{{ card.heading }}</h3>
					<p>{{ card.text }}</p>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
