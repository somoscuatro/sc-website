{% extends "section.twig" %}

{% set background = get_color_name(bg_color) %}
{% set foreground = get_foreground_color_name(background) %}

{% block section_content %}
	<div class="flex flex-col gap-10 md:gap-16 text-{{ foreground }}">
		{% if title %}
			<h2 class="text-4xl font-medium md:text-6xl font-syne">{{ title }}</h2>
		{% endif %}
		<div class="grid grid-cols-1 gap-10 md:gap-20 md:grid-cols-2 xl:grid-cols-3">
			{% for service in services %}
				<div class="flex flex-col gap-4 xl:gap-8 pb-4 border-b border-{{ foreground }}">
					<div class="flex flex-col h-full gap-2">
						<a href="{{ function('get_permalink', service.ID) }}">
							<h3 class="md:min-h-[7rem] text-2xl md:text-3xl font-medium font-syne">{{ service.post_title }}</h3>
						</a>
						<p class="h-full">{{ service.post_excerpt }}</p>
					</div>
					<a href="{{ function('get_permalink', service.ID) }}" class="flex items-center gap-2">
						{{ __('Know More', 'somoscuatro-theme') }}
						<span class="stroke-{{foreground}}">{% include 'icons/arrow.twig' %}</span>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
