{% extends "section.twig" %}

{% block section_content %}
	<div class="flex flex-col gap-16 lg:gap-32">
		{% for step in steps %}
			<div class="flex flex-col gap-8 lg:gap-32 lg:flex-row">
				<div class="lg:w-1/3">
					<div class="flex flex-col gap-4">
						<p class="uppercase text-md">{{ __('Step', 'somoscuatro-theme' ) ~ ' ' ~ loop.index }}</p>
						<h2 class="text-4xl font-medium lg:text-5xl font-syne">{{ step.step_title }}</h2>
						<p>{{ step.step_text }}</p>
					</div>
				</div>
				<div class="flex flex-col gap-8 lg:gap-16 lg:w-2/3">
					{% for substep in step.substeps %}
						<div class="flex flex-col gap-6">
							<div class="flex flex-col gap-2">
								<h3 class="text-2xl font-semibold lg:text-3xl font-syne">{{ substep.substep_title }}</h3>
								<p>{{ substep.substep_text }}</p>
							</div>
							<div class="flex flex-col gap-2">
								<p class="text-lg font-semibold uppercase">{{ __('Capabilities', 'somoscuatro-theme') }}</p>
								<ul class="grid grid-cols-2 gap-y-4 gap-x-6">
									{% for capability in substep.capabilities %}
										<li class="pb-1 border-b border-b-anti-flash-white-400">{{ capability.capability }}</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
